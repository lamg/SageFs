                    Margin="0,0,4,0" />
            <Button Content="â†»"
                    Command="{Binding RefreshCommand}"
                    MinHeight="24" MinWidth="30" />
          </StackPanel>
        </DockPanel>

        <!-- Summary -->
        <TextBlock Text="{Binding SummaryText}"
                   FontFamily="Cascadia Code,Consolas,Courier New"
                   FontSize="13" FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />

        <!-- File list -->
        <TextBlock Text="{Binding FilesText}"
                   FontFamily="Cascadia Code,Consolas,Courier New"
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />
      </StackPanel>
    </ScrollViewer>
  </Border>
</DataTemplate>
